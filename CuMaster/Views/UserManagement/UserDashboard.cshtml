
@{
    ViewBag.Title = "Profile and Defaults";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model CuMaster.BusinessLibrary.ViewModels.UserDashboardViewModel

<div class="container-fluid text-center">
    <div class="container">
        <div class="alert alert-success hidden" id="dashboardSuccess">
            Your settings have been successfully saved.
        </div>
        <div class="alert alert-danger hidden" id="dashboardFailed">
            Your save was unsuccessful. Please try again.
        </div>
    </div>

    <div class="row">
        <div class="collapse-bar col-md-offset-1 col-md-10 bg-info text-left" style="min-height:25px;" id="profileCollapse" data-toggle="collapse">
            <div class="text-left col-md-9 col-sm-7 col-xs-7">
                <label style="color:#eee;">User Profile</label>
            </div>
            <div class="text-right pull-right col-md-1" style="font-size:18px; color:#eee;">
                <span id="profileCollapseToggle" class="glyphicon glyphicon-collapse-down"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="collapse-pane col-md-offset-1 col-md-10 col-sm-12 collapse show" id="profileCollapsePane">
            <div class="col-md-offset-3 col-md-6 text-left">
                <form id="frmRegister">
                    <div class="form-group">
                        <label for="lblUserName">User Name: </label>
                        @Html.Label(Model.UserName, new { @id = "lblUserName" })
                    </div>
                    <div class="form-group">
                        <label for="txtEmail">Email: </label>
                        <div class="input-group">
                            @*<input type="email" id="txtEmail" maxlength="500" required class="form-control" />*@
                            @Html.TextBoxFor(m => m.Email, new { @id = "txtEmail", @maxlength = "500", @class = "form-control" })
                            <div class="input-group-addon addon-success" id="emailIsGood"><span class="fa fa-check"></span></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="txtDisplayName">Display Name: </label>
                        @*<input type="email" id="txtDisplayName" maxlength="500" required class="form-control" />*@
                        @Html.TextBoxFor(m => m.DisplayName, new { @id = "txtDisplayName", @maxlength = "500", @class = "form-control" })
                    </div>
                    @*<div class="form-group">
                    <label for="txtPasswordNew">Password: </label>
                    <div class="input-group">
                        <input type="password" id="txtPasswordNew" min="8" required class="form-control" />
                        <div class="input-group-addon addon-danger" id="passwordNewIsGood"><span class="fa fa-ban"></span></div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="txtPasswordCheck">Retype Password: </label>
                    <div class="input-group">
                        <input type="password" id="txtPasswordCheck" min="8" required class="form-control" />
                        <div class="input-group-addon addon-danger" id="passwordCheckIsGood"><span class="fa fa-ban"></span></div>
                    </div>
                </div>*@
                    <div class="row">
                        <button type="button" class="btn btn-primary pull-right" id="btnSaveProfile">Update Account</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <br/>
    <div class="row">
        <div class="collapse-bar col-md-offset-1 col-md-10 bg-info text-left" style="min-height:25px;" id="defaultCollapse" data-toggle="collapse">
            <div class="text-left col-md-9 col-sm-7 col-xs-7">
                <label style="color:#eee;">User Defaults</label>
            </div>
            <div class="text-right pull-right col-md-1" style="font-size:18px; color:#eee;">
                <span id="defaultCollapseToggle" class="glyphicon glyphicon-collapse-down"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="collapse-pane col-md-offset-1 col-md-10 col-sm-12 collapse show" id="defaultCollapsePane">
            <div class="col-md-offset-3 col-md-6 text-left">
                <form id="frmDefaults">
                    <div class="form-group">
                        <label for="defaultFromCurrency">Default to Convert From: </label>
                        @Html.DropDownListFor(m => m.DefaultCurrencyFrom, Model.Currencies, "Select a Currency", new { @id = "defaultFromCurrency", @class = "form-control", @name = "currencyDropdown" })
                    </div>
                    <div class="form-group ">
                        <label for="defaultToCurrency">Default to Convert To: </label>
                        @Html.DropDownListFor(m => m.DefaultCurrencyTo, Model.CurrenciesTo, "Select a Currency", new { @id = "defaultToCurrency", @class = "form-control", @name = "currencyDropdown" })
                    </div>
                    <div class="form-group">
                        <label for="defaultCountry">Default Country: </label>
                        @Html.DropDownListFor(m => m.DefaultCountry, Model.Countries, "Select a Country", new { @id = "defaultCountry", @class = "form-control", @name = "currencyDropdown" })
                    </div>
                    <div class="form-group">
                        <label for="chkAutoUpdate">Auto Update Tracker Entries by Default: </label>
                        @Html.CheckBoxFor(m => m.AutoUpdateTrackerDefault, new { @id = "chkAutoUpdate"})
                    </div>
                    <button type="button" class="btn btn-primary pull-right" id="btnSaveDefaults">Save Defaults</button>
                </form>
            </div>
        </div>
    </div>


</div>

@section JavaScript
{
    <script type="text/javascript" src="~/Scripts/Pages/UserDashboard.js"></script>
}

