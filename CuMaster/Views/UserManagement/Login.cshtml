<form id="frmLogin">
    <div class="form-group">
        <label for="txtUserName">User Name or Email: </label>
        <div class="input-group">
            <div class="input-group-addon"><span class="fa fa-user"></span></div>
            <input type="text" required maxlength="500" id="txtUserName" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label for="txtPassword">Password: </label>
        <div class="input-group">
            <div class="input-group-addon"><span class="fa fa-lock"></span></div>
            <input type="password" id="txtPassword" min="8" required class="form-control" />
        </div>
    </div>
    <button type="button" id="btnLogin" class="btn btn-primary">Login</button>
</form>
      
            
        
