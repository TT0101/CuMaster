
@{
    ViewBag.Title = "Manage Email Alerts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="alert alert-success hidden" id="manageSuccess">
        Your alert(s) have been successfully deleted.
    </div>
    <div class="alert alert-danger hidden" id="manageFailed">
        Your delete was unsuccessful. Please try again.
    </div>
</div>

<div class="row">
    <div class="collapse-bar col-md-offset-1 col-md-10 bg-info text-left" style="min-height:25px;" id="alertsCollapse" data-toggle="collapse">
        <div class="text-left col-md-9 col-sm-7 col-xs-7">
            <label style="color:#eee;">Manage Email Alerts</label>
        </div>
        @*<div class="text-right pull-right col-md-1" style="font-size:18px; color:#eee;">
            <span id="converterCollapseToggle" class="glyphicon glyphicon-collapse-down"></span>
        </div>*@
    </div>
</div>
<div class="row">
    <div class="collapse-pane col-md-offset-1 col-md-10 col-sm-12 collapse show" id="alertPane">
        <div class="pull-right col-md-8 text-right">
            <button class='btn btn-primary' onclick='deleteAllAlerts();'><span class='glyphicon glyphicon-trash'></span>&nbsp;Delete All</button>
        </div>
        <br /><br />
        <div class="col-md-12">
            <table id="alertTable" class="dataTable table table-condensed" cellspacing="0"></table>
        </div>
   </div>
</div>

<div id="emailAlertEditContainer">
    @*@Html.Action("Index", "EmailAlertEdit")*@
</div>


    @section JavaScript
    {
        @*<script type="text/javascript" src=@Url.Content("~/Scripts/DataTables/jquery.dataTables.min.js")></script>*@
        <script type="text/javascript" src=@Url.Content("~/Scripts/moment.min.js")></script>
        <script type="text/javascript" src=@Url.Content("~/Scripts/Pages/ManageEmailAlerts.js")></script>
    }
