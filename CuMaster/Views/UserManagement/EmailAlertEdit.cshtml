@model CuMaster.BusinessLibrary.ViewModels.EmailAlertViewModel


<div class="modal fade" id="modalEmailAlertEdit" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Edit an Email Alert</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" style="font-size:20px;" class="glyphicon glyphicon-remove"></span>
                </button>
            </div>
            <div class="modal-body">
                @*<div class="col-md-10 col-md-offset-1">*@
                <div class="row">
                    <div class="alert alert-success hidden" id="emailAlertSuccess">
                        Thank you! Your email alert was successfully changed.
                    </div>
                    <div class="alert alert-success hidden" id="emailAlertDeleteSuccess">
                        Your email alerts were successfully removed.
                    </div>
                    <div class="alert alert-danger hidden" id="emailAlertFailed">
                        Your email alert failed to process.  Please try again.
                    </div>
                </div>
                @*</div>*@
                <form id="emailAlertForm">
                    <div class="form-group">
                        <label for="dspEmail">Email: </label>
                        @Html.Display(Model.Email, new { @id = "dspEmail" })
                        @Html.Hidden(Model.Email, new { @id = "txtEmail"})
                    </div>
                    <div class="form-group">
                        <label for="emailFromCurrency">Currency Rate From: </label>
                        @Html.DropDownListFor(m => m.CurrencyFrom, Model.Currencies, new { @id = "emailFromCurrency", @class = "form-control", @name = "currencyDropdown" })
                        @Html.ValidationMessageFor(model => model.CurrencyFrom, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group ">
                        <label for="emailToCurrency">To: </label>
                        @Html.DropDownListFor(m => m.CurrencyTo, Model.CurrenciesTo, new { @id = "emailToCurrency", @class = "form-control", @name = "currencyDropdown" })
                        @Html.ValidationMessageFor(model => model.CurrencyTo, "", new { @class = "text-danger" })
                    </div>
                    <div class="btn-group btn-group-justified" role="group">
                        <div class="btn-group" role="group">
                            <button type="button" id="btnThreshold" class="btn btn-info" data-toggle="panel" data-target="#alertOptionThreshold">Threshold</button>

                        </div>
                        <div class="btn-group" role="group">
                            <button type="button" id="btnTime" class="btn btn-info" data-toggle="panel" data-target="#alertOptionTime">Time</button>

                        </div>
                    </div>
                    <br />

                    <div class="panel collapse" id="alertOptionThreshold" name="alertOptionThreshold" aria-hidden="true">
                        <div class="form-group">
                            <label for="txtPercentage">On Percentage Change: </label>
                            <input type="number" class="form-control" id="txtThreshold" />
                            @Html.ValidationMessageFor(model => model.PercentageChange, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="panel collapse" id="alertOptionTime" name="alertOptionTime" aria-hidden="true">
                        <div class="form-group">
                            <label for="txtTime">Daily at: </label>
                            <input type="time" class="form-control" id="txtTimeToSend" />
                            @Html.ValidationMessageFor(model => model.TimeToSend, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnSaveAlert" class="btn btn-primary">Save Alert</button>
                <button type="button" class="btn btn-default" data-dismiss="modal" id="btnCloseAlert">Close</button>
            </div>
        </div>
    </div>
</div>
