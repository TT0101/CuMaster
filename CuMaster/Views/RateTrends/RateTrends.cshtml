@model CuMaster.BusinessLibrary.ViewModels.RateTrendsViewModel
@{
    ViewBag.Title = "Rate Trends";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript" src=@Url.Content("~/Scripts/moment.min.js")></script>
<script type="text/javascript" src=@Url.Content("~/Scripts/d3/d3.min.js")></script>
<script type="text/javascript" src=@Url.Content("~/Scripts/c3.min.js")></script>
<script type="text/javascript" src=@Url.Content("~/Scripts/Pages/RateTrends.js")></script>

<div class="container-fluid">
    <div class="row">
        <div class="collapse-bar col-md-12 bg-info text-left" style="min-height:25px;" id="filterCollapse" data-toggle="collapse">
            <div class="text-left col-md-9 col-sm-7 col-xs-7">
                <label style="color:#eee;"></label>
            </div>
            <div class="text-right pull-right col-md-1" style="font-size:18px; color:#eee;">
                <span id="filterCollapseToggle" class="glyphicon glyphicon-collapse-down"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="collapse-pane col-md-12 col-sm-12 collapse show" id="filterCollapsePane">
            <div class="col-md-6 pull-left">
                <div class="form-inline">
                    <label>Show for: </label>
                    <select id="ddTimeSpan" class="form-control">
                        <option value="1">Current Day</option>
                        <option value="2">Last 2 Days</option>
                        <option value="5">Last 5 Days</option>
                        <option value="7">Last 7 Days</option>
                        <option value="10">Last 2 Weeks</option>
                        <option value="30">Current Month</option>
                        <option value="90">Last 3 Months</option>
                        <option value="180">Last 6 Months</option>
                        <option value="365">Current Year</option>
                    </select>
                    &nbsp;
                    <button type="button" class="btn btn-default" id="btnResetChart">Reset Chart</button>
                </div>

                @*<div class="btn-group" id="btnGroupTime">
                        <button type="button" class="btn btn-default active" id="btn1">Current Day</button>
                        <button type="button" class="btn btn-default" id="btn2">Last 2 Days</button>
                        <button type="button" class="btn btn-default" id="btn5">Last 5 Days</button>
                        <button type="button" class="btn btn-default" id="btn7">Last 7 Days</button>
                        <button type="button" class="btn btn-default" id="btn190">Last 6 Months</button>
                        <button type="button" class="btn btn-default" id="btn365">Last Year</button>
                    </div>*@
            </div>
            <div class="col-md-6 pull-right text-right">
                <div class="form-inline">
                    <label for="ddBaseCurrency">Base Currency:</label>
                    @Html.DropDownListFor(m => m.BaseCurrency, Model.Currencies, new { @id = "ddBaseCurrency", @class="form-control" })
                </div>
            </div>
        </div>
    </div>
    
